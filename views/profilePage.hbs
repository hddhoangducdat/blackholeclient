    <div class="page-header header-filter" data-parallax="true" style="background-image: url('img/city-profile.jpg');">
    </div>
    <div class="main main-raised">
        <div class="profile-content">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 ml-auto mr-auto">
                        <div class="profile">
                            <div class="avatar">
                                <img src="{{user.image}}"
                                    alt="https://cdn2.iconfinder.com/data/icons/ios-7-icons/50/user_male2-512.png"
                                    class="img-raised rounded-circle img-fluid">

                            </div>
                            <div class="name">
                                <h2 class="title">{{user.firstName}} {{user.lastName}}</h2>



                            </div>
                        </div>
                    </div>
                </div>
                <div class="description text-center">
                    <p>Giới tính:{{user.sex}} </p>
                    <p>Địa chỉ: {{user.address}}</p>
                    <p>Email: {{user.email}}</p>
                    <p>Số điện thoại: {{user.phone}}</p>
                </div>
                <br /> <br />
                <div class="row">

                    <div class="col-md-6 ml-auto mr-auto">
                        <h3>
                            THAY ĐỔI THÔNG TIN CÁ NHÂN
                        </h3>
                        <form action="/profile/submit" id="form" class="ui form" enctype="multipart/form-data"
                            method="POST">
                            <div class="two fields">
                                <div class="field">
                                    <label>Họ</label>
                                    <input type="text" name="firstName" placeholder="Họ và tên đệm"
                                        value="{{user.firstName}}">
                                </div>
                                <div class="field">
                                    <label>Tên</label>
                                    <input type="text" name="lastName" placeholder="Tên" value="{{user.lastName}}">
                                </div>
                            </div>
                            <div class="field">
                                <label>Địa chỉ</label>
                                <input type="text" name="address" placeholder="Địa chỉ" value="{{user.address}}">
                            </div>
                            <div class="three fields">
                                <div class="field">
                                    <label>Giới tính</label>
                                    <input type="text" name="sex" placeholder="Giới tính" value="{{user.sex}}">
                                </div>
                                <div class="field">
                                    <label>Số điện thoại</label>
                                    <input type="text" name="phone" placeholder="Số điện thoại" value="{{user.phone}}">
                                </div>
                                <div class="field">
                                    <label>Email</label>
                                    <input type="text" name="email" placeholder="Email" value="{{user.email}}">
                                </div>
                            </div>
                            <div class="field">


                                <div class="custom-file">
                                    <input name="userImage" type="file" class="custom-file-input" id="inputGroupFile01"
                                        aria-describedby="inputGroupFileAddon01">
                                    <label class="custom-file-label" for="inputGroupFile01">Thay ảnh đại diện</label>
                                </div>

                            </div>
                            <button class="ui button primary" type="submit">Thay đổi</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <br /> <br />
    </div>


