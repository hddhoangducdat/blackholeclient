    <li class="ui container">
        <div class="ui grid">

            <div class="four wide column">
                <img class="ui fluid image" src="{{product.images}}">
            </div>
            <div class="twelve wide column">
                <div class="ui container">
                    <h1 class="title">
                        {{product.name}}
                    </h1>
                    <div class="meta">
                        <a href={{product.categoryUrl}}>{{product.category}}</a>
                    </div>
                    <div class="meta">
                        Nhà sản xuất: {{product.createdBy}}
                    </div>
                    <h2 class="meta">
                        <font color="red">
                            {{product.price}}
                        </font>
                    </h2>
                    <div class="description">
                        {{product.description}}
                    </div>
                    <br />
                    <div class="ui grid">
                        <div class="twelve wide column">
                            <div class="justify-content-center">
                                <button id="increaseNumber" class="ui button tiny">
                                    <i class="plus  icon tiny"></i>
                                </button>
                                <div id="number" class="ui button blue tiny">
                                    1
                                </div>
                                <button id="decreaseNumber" class="ui button tiny">
                                    <i class="minus icon tiny"></i>
                                </button>
                            </div>
                        </div>
                        <div class="four wide column">
                            <button id="giohang" class="ui button red" data-id={{product._id}}>
                                <i class="ui icon cart"></i>
                                Chọn mua
                            </button>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <br />
        <br />
        <h2>Mặt hàng bạn có thể quan tâm</h2>
        <div class="ui link cards centered grid">
            {{#each carts}}
            <div class="card">
                <div class="image">
                    <img id="productImage-{{this._id}}" src="{{this.images}}">
                </div>

                <div class="content">
                    <a href="/product/{{this._id}}">
                        <div class="header" id="productName-{{this._id}}">{{this.name}}</div>
                    </a>
                    <div class="meta">
                        <a href="/categories/{{this.category}}">{{this.productName}}</a>from
                        <a href="/CreatedBy/{{this.createdBy}}">{{this.createdBy}}</a>
                    </div>
                    <div class="description" id="productPrice-{{this._id}}">{{this.price}}</div>
                </div>
                <div class="extra content">
                    <span class="addToCart" data-id={{this._id}}>
                        <a>
                            <i class="cart icon"></i>
                            Add to cart
                        </a>
                    </span>
                </div>
            </div>
            {{/each}}
        </div>

        <br />
        <br />

        <form id="formSubmit" action="/product/comment/{{product._id}}" class="ui form" method="POST"
            data-image={{user.image}} data-name={{user.name}}>
            <div class="form-group">
                <input id="commentText" name="comment" type="text" class="form-control" id="exampleFormControlInput1"
                    placeholder="Bình luận">
            </div>
        </form>

        <ul id="contentList" class="list-unstyled">
            {{#each comment}}
            <li class="media">

                <img src="{{this.image}}" class="align-self-start mr-3" alt="" width="40px" height="40px">
                <div class="media-body">
                    <h5 class="mt-0">{{this.name}}</h5>
                    {{this.text}}
                </div>

            </li>
            <br />
            {{/each}}
        </ul>
