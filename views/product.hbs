    <br /> <br /> <br /> <br /> <br />
    <br /> <br /> <br /> <br /> <br />
    <div class="ui container">
        <div class="ui grid">

            <div class="four wide column">
                <img class="ui fluid image" src="{{product.images}}">
            </div>
            <div class="twelve wide column">
                <div class="ui container">
                    <h1 class="title">
                        {{product.name}}
                    </h1>
                    <div class="meta">
                        <a href={{product.categoryUrl}}>{{product.category}}</a>
                    </div>
                    <div class="meta">
                        Nhà sản xuất: {{product.createdBy}}
                    </div>
                    <h2 class="meta">
                        <font color="red">
                            {{product.price}}
                        </font>
                    </h2>
                    <div class="description">
                        {{product.description}}
                    </div>
                    <br />
                    <div class="ui grid">
                        <div class="twelve wide column">
                            <div class="justify-content-center">
                                <button id="increaseNumber" class="ui button tiny">
                                    <i class="plus  icon tiny"></i>
                                </button>
                                <div id="number" class="ui button blue tiny">
                                    1
                                </div>
                                <button id="decreaseNumber" class="ui button tiny">
                                    <i class="minus icon tiny"></i>
                                </button>
                            </div>
                        </div>
                        <div class="four wide column">
                            <button id="giohang" class="ui button red" data-id={{product._id}}>
                                <i class="ui icon cart"></i>
                                Chọn mua
                            </button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <script src="../../js/core/jquery.min.js" type="text/javascript"></script>
    <script src="../../js/core/popper.min.js" type="text/javascript"></script>
