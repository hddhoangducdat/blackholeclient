    {{#if condition}}
    <div class="ui container">
        <h1>Chưa có lịch sử sử dụng Web</h1>
    </div>
    {{else}}
    <div class="ui container">
        {{#each history}}
        {{#if this.condition4}}
        <div class="ui three top attached steps">
            <div class="disabled step">
                <i class="payment icon"></i>
                <div class="content">
                    <div class="title">Hủy đơn hàng</div>
                </div>
            </div>
        </div>
        <div class="ui attached segment">
            <ul class="list-group">
                {{#each this.bill}}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <a href="/product/{{this._id}}">{{this.name}} </a>
                    <div class="meta">{{this.type}}</div>
                    <div class="meta">Giá tiền: {{this.price}}</div>
                    <span class="badge badge-primary badge-pill">{{this.number}}</span>
                </li>
                {{/each}}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <h2>Tổng giá tiền: {{this.sum}}</h2>
                </li>
            </ul>
        </div>
        <br />
        {{else}}
        <div class="ui three top attached steps">
            <div class="{{this.condition1}} step">
                <i class="payment icon"></i>
                <div class="content">
                    <div class="title">Gói hàng</div>
                </div>
            </div>

            <div class="{{this.condition2}} step">
                <i class="truck icon"></i>
                <div class="content">
                    <div class="title">Đang chuyển</div>
                </div>
            </div>

            <div class="{{this.condition3}} step">
                {{!-- <i class="info icon"></i> --}}
                <div class="content">
                    <div class="title">Hoàn tất</div>
                </div>
            </div>
        </div>
        <div class="ui attached segment">

            <ul class="list-group">
                {{#each this.bill}}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <a href="/product/{{this._id}}">{{this.name}} </a>
                    <div class="meta">{{this.type}}</div>
                    <div class="meta">Giá tiền: {{this.price}}</div>
                    <span class="badge badge-primary badge-pill">{{this.number}}</span>
                </li>
                {{/each}}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <h2>Tổng giá tiền: {{this.sum}}</h2>
                </li>
            </ul>
            {{#if this.condition3}}
            {{else}}
            <button class="ui button right deleteBill" data-id={{this._id}}>Hủy đơn hàng</button>
            {{/if}}
        </div>
        <br />
        {{/if}}
        {{/each}}
    </div>
    {{/if}}


