                    <h2>Các mặt hàng hiện có</h2>
                </div>
                <div class="ui link cards centered grid">
                    {{#each carts}}
                    <div class="card">
                        <div class="image">
                            <img id="productImage-{{this._id}}" src="{{this.images}}">
                        </div>

                        <div class="content">
                            <a href="/product/{{this._id}}">
                                <div class="header" id="productName-{{this._id}}">{{this.name}}</div>
                            </a>
                            <div class="meta">
                                <a href="/categories/{{this.category}}">{{this.productName}}</a>from
                                <a href="/CreatedBy/{{this.createdBy}}">{{this.createdBy}}</a>
                            </div>
                            <div class="description" id="productPrice-{{this._id}}">{{this.price}}</div>
                        </div>
                        <div class="extra content">
                            <span class="addToCart" data-id={{this._id}}>
                                <a>
                                    <i class="cart icon"></i>
                                    Add to cart
                                </a>
                            </span>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
